<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="center"
        android:duplicateParentState="false"
        android:background="@drawable/download_action_bg"
        android:scaleType="center"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/NotificationTitle" 
            android:singleLine="true"
            android:ellipsize="end"/>
         <LinearLayout
            android:id="@+id/download_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/download_success_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_marginRight="12dp"
                style="@style/NotificationText"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/download_success_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                style="@style/NotificationText" 
                android:singleLine="true"
                android:ellipsize="end"/>
         </LinearLayout>
         <LinearLayout
            android:id="@+id/download_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/download_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left|center"
                style="@style/NotificationText"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/download_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right|center"
                style="@style/NotificationText"
                android:textSize="10sp"
                android:singleLine="true"
                android:ellipsize="end"/>
         </LinearLayout>
         <ProgressBar
            android:id="@+id/download_progress"
            style="@style/download_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/download_text"
            android:max="100"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/action"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginLeft="18dp"
        android:layout_weight="0"
        android:gravity="center"
        android:layout_gravity="right|center"
        android:background="@drawable/download_action_bg"
        style="@style/NotificationTitle"/>
</LinearLayout>
